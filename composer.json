{
	"name": "koldy/framework",
	"type": "framework",
	"description": "Koldy PHP framework for simple and rapid development",
	"keywords": [
		"framework"
	],
	"homepage": "https://koldy.net",
	"license": "MIT",
	"authors": [
		{
			"name": "Vlatko Koudela",
			"email": "vlatko@koldy.net",
			"role": "Developer"
		}
	],
	"require": {
		"php": ">=8.1",
		"ext-pdo": "*",
		"ext-mbstring": "*",
		"ext-memcached": "*",
		"ext-openssl": "*",
		"ext-json": "*",
		"ext-curl": "*",
		"ext-iconv": "*",
		"ext-ctype": "*",
		"ext-bcmath": "*"
	},
	"require-dev": {
		"phpstan/phpstan": "^2.1.17"
	},
	"config": {
		"bin-dir": "bin",
		"vendor-dir": "vendor"
	},
	"scripts": {
		"phpstan": "bin/phpstan"
	},
	"autoload": {
		"psr-4": {
			"Koldy\\": "src/"
		}
	}
}
